{
	"name": "vari-wordle",
	"version": "1.1.0",
	"repository": "git@github.com:nrgbistro/vari-wordle.git",
	"author": "nrgbistro <nolangelinas@gmail.com>",
	"license": "MIT",
	"private": true,
	"workspaces": [
		"@vari-wordle/client",
		"@vari-wordle/server"
	],
	"scripts": {
		"start": "concurrently -n \"server,client\" -c \"blue,magenta\"  \"yarn --cwd server start\" \"yarn --cwd client start\"",
		"build": "concurrently -n \"server,client\" -c \"blue,magenta\"  \"yarn --cwd server build\" \"yarn --cwd client build\"",
		"dev": "concurrently -n \"server,client\" -c \"blue,magenta\"  \"yarn --cwd server dev\" \"yarn --cwd client dev\""
	},
	"devDependencies": {
		"concurrently": "^8.2.0"
	}
}
